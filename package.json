{
  "name": "ohut",
  "description": "A simple git-based remote pair programming tool.",
  "version": "0.0.3",
  "keywords": [
    "collaboration",
    "productivity",
    "pair",
    "programming",
    "remote",
    "git"
  ],
  "author": "Matias Heikkil√§ <matias@three.consulting>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/three-consulting/ohut.git"
  },
  "bin": {
    "ohut": "./ohut"
  },
  "files": [
    "bin"
  ],
  "dependencies": {
    "@types/node": "^15.0.1",
    "chokidar": "^3.5.1",
    "socket.io-client": "^4.0.1",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "dev": "ts-node ./src/index.ts",
    "lint": "npx prettier --write . && npx eslint . --ext .ts",
    "lint:fix": "npx prettier --write . && npx eslint . --ext .ts --fix",
    "prepare": "npx tsc",
    "build": "npx tsc"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none"
  }
}
